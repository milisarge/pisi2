            <Dependency>liblxqt-devel</Dependency>
            <Dependency>qt5-linguist</Dependency>
            <Dependency>qt5-svg-devel</Dependency>
            <Dependency>libqtxdg-devel</Dependency>
        </BuildDependencies>
    </Source>

    <Package>
        <Name>lxqt-connman-applet</Name>
